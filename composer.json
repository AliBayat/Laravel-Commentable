{
	"name": "alibayat/laravel-commentable",
	"description": "Implementing a Comment system for Laravel's Eloquent models.",
	"license": "MIT",
	"keywords": ["Laravel", "Eloquent", "Laravel-Commentable", "Laravel Commentable"],
	"authors": [
		{
		    "name": "Ali Bayat",
		    "email": "ali.bayat@live.com"
		}
	],

	"require": {
		"php": "^7.2",
		"illuminate/support": "^5.8|^6.0",
		"illuminate/database": "^5.8|^6.0",
		"kalnoy/nestedset": "^5.0"
	},

	"autoload": {
		"psr-4": {
			"AliBayat\\LaravelCommentable\\": "src/"
		}
	},

	"config": {
		"preferred-install": "dist",
		"sort-packages": true
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0-dev"
		},
		"laravel": {
			"providers": [
				"AliBayat\\LaravelCommentable\\CommentableServiceProvider"
			]
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
